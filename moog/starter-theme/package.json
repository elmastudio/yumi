{
	"name": "ainoblocks",
	"version": "1.0.0",
	"description": "A lightweight starter block theme for the Gutenberg editor with site editing support.",
	"scripts": {
		"build": "parcel build",
		"watch": "parcel watch",
		"clean": "rm -rf build/*",
		"browsersync": "node browsersync.js",
		"dev": "parcel src/index.html --port 3000"
	},
	"keywords": [
		"wordpress",
		"themes"
	],
	"author": "ElmaStudio",
	"license": "GPL-2.0-or-later",
	"devDependencies": {
		"@parcel/transformer-sass": "^2.7.0",
		"parcel": "^2.7.0",
		"parcel-plugin-nuke-dist": "^1.0.1",
		"rimraf": "^3.0.2"
	},
	"targets": {
		"default": {
			"source": [
				"assets/src/sass/style.scss",
				"assets/src/sass/style-editor.scss"
			],
			"distDir": "./assets/build/css",
			"publicUrl": "/assets/images"
		}
	},
	"dependencies": {
		"browser-sync": "^2.27.10"
	}
}